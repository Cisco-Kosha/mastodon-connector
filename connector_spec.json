{
  "version": "2.0.0",
  "fields": [
    {
      "field": "AUTH_TYPE",
      "displayName": "Mastodon Auth Type",
      "type": "String",
      "minLength": 4,
      "maxLength": 60,
      "required": true,
      "description": "Mastodon API Auth Type",
      "default": "OAUTH2",
      "example": "OAUTH2",
      "helpSection": ""
    },
    {
      "field": "ACCESS_TOKEN",
      "displayName": "OAuth2 Access Token",
      "type": "String",
      "minLength": 5,
      "maxLength": 250,
      "required": true,
      "description": "Mastodon OAuth2 access token",
      "helpSection": "Mastodon OAuth2 access token"
    },
    {
      "field": "REFRESH_TOKEN",
      "displayName": "OAuth2 refresh token",
      "type": "String",
      "minLength": 1,
      "maxLength": 180,
      "required": false,
      "description": "Mastodon OAuth2 refresh token",
      "helpSection": "Mastodon OAuth2 refresh token"
    },
    {
      "field": "EXPIRES_AT",
      "displayName": "OAuth2 Expiry Time",
      "type": "String",
      "minLength": 5,
      "maxLength": 30,
      "required": false,
      "description": "Mastodon OAuth2 token refresh time",
      "example": "2022-11-18T15:08:55.642141+05:30",
      "helpSection": "Mastodon OAuth2 token refresh time"
    },
    {
      "field": "SERVER_URL",
      "displayName": "Mastodon Server URL",
      "type": "String",
      "minLength": 4,
      "maxLength": 60,
      "required": true,
      "description": "Mastodon API Server URL",
      "example": "https://mastodon.world",
      "default": "https://mastodon.world",
      "helpSection": ""
    },
    {
      "field": "provider",
      "displayName": "OAuth2 Provider Name",
      "type": "String",
      "minLength": 1,
      "maxLength": 60,
      "required": true,
      "description": "Mastodon OAuth2 provider name",
      "example": "Mastodon",
      "helpSection": "Mastodon OAuth2 provider name"
    },
    {
      "field": "email",
      "displayName": "Email fetched from OAuth2 auth flow",
      "type": "String",
      "minLength": 1,
      "maxLength": 60,
      "required": true,
      "description": "Mastodon email fetched from OAuth2 auth flow",
      "example": "bob@email.com",
      "helpSection": "Mastodon email fetched from OAuth2 auth flow"
    }
  ]
}